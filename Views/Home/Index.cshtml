@model IEnumerable<Images>
@{
    ViewData["Title"] = "Home Page";
}

<a asp-action="AddImage" class="btn btn-info">Add Profile</a>

@if (Model.Count() > 0)
{
    <table>
        <tr>
            <th>Profile Picture</th>
            <th>User Name</th>
        </tr>
        @foreach (var item in Model)
        {
            <td>
                @if (item.Picture != null)
                {
                    var based64 = Convert.ToBase64String(item.Picture);
                    var img = string.Format("data:Image/jpg;base64.{0}", based64);
                    <img src="@img" width="100px" height="100px" />
                }
            </td>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
        }
    </table>
}